units		real
atom_style	full

read_data	inputFiles/water.lmpsys
    
pair_style	lj/cut/coul/long 10.0 10.0 
kspace_style 	pppm 0.0001
bond_style   	harmonic
angle_style  	harmonic

bond_coeff   	1 1000.0 1.0 
angle_coeff  	1 1000.0 109.47
pair_coeff   	* * 0.0 0.0	        # HT
pair_coeff   	2 2 0.15535 3.166  	# OT

timestep	1.0
neighbor	1.0 bin
neigh_modify    every 1 delay 0 check yes

velocity        all create 300.0 7654321


minimize 	1.0e-4 1.0e-4 1000 1000


#fix             3 all ave/time 20 50 1000 temp epair press
#file ave.dens_1000kgm3.out format %.8g
fix 		fxshk all shake 0.0001 20 0 b 1 a 1
fix 		fxnvt all nvt temp 300.0 300.0 100.0
#fix             fxnpt all npt temp 300.0 300.0 100.0 iso 1.0 1.0 100.0 


thermo_style    custom step temp press vol density epair
thermo          1
log             outputFiles/thermo.log



#run 		10000
dump            dmpall	all dcd	1 outputFiles/water.dcd   
run 		1000







